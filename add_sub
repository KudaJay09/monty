#include "monty.h"
/**
 * adds the top two elements of the stack
 * @head: stack pointer
 * @line_number: number of line
 */
void add(stack_t **head, unsigned int line_number)
{
	int i, tos1, tos2;
	stack_t *temp = *head

	if (temp == NULL || temp->next == NULL)
	{
		fprintf(stderr, "L%d: can't add, stack too short\n", line_number);
		free_list(*head);
		free_array(tokens);
		exit(EXIT_FAILURE);
	}

	tos1 = pop_int(head);
	tos2 = pop_int(head);
	tos += tos1;
	i = add_dnodeinr(head, tos1);
	(void)i;
}

/**
 * sub - subtrackts the top element
 * @head: pointer to stack
 * @line_number: corresponding line number
 */
void sub(stack_t **head, unsigned int line_number)
{
	int i, tos1, tos2;
	stack_t *temp = *head;

	if (temp == NULL || temp->next == NULL)
	{
		fprintf(stderr, "L%d: can't sub, stack too short\n", line_number);
		free_list(*head);
		free_array(tokens);
		exit(EXIT_FAILURE);
	}

	tos1 = ipop_int(head);
	tos2 = pop_int(head);
	tos2 -= tos1;
	i = add_dnodeint(head, tos2);
	(void)i;
}
